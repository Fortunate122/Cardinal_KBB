{
  "compilerOptions": {
    "outDir": "./dist",              // ✅ outputs to server/dist
    "rootDir": "./src",              // ✅ compiles from server/src
    "noEmitOnError": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"],
}
